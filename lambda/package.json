{
  "name": "twitch-discord-notifier-lambda",
  "version": "1.0.0",
  "description": "Lambda function for monitoring Twitch streams and sending Discord notifications",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "package": "npm run build && zip -r function.zip dist node_modules",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "dev": "npm run build && node -r dotenv/config dist/index.js"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.650.0",
    "@aws-sdk/lib-dynamodb": "^3.650.0",
    "@types/aws-lambda": "^8.10.145",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.7",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "twitch",
    "discord",
    "notifications",
    "aws-lambda"
  ],
  "author": "",
  "license": "MIT"
}
